@model Classificacao_F1.Models.Resultado

@{
    ViewData["Title"] = "Novo colocado";
}

<h3>Insira os dados do Participante em ordem crescente de Posição</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Posicao_Grid" class="control-label"></label>
                <input asp-for="Posicao_Grid" class="form-control" placeholder="Insira a posicão de 1 a 5" />
                <span asp-validation-for="Posicao_Grid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipe" class="control-label"></label>
                <input asp-for="Equipe" class="form-control" />
                <span asp-validation-for="Equipe" class="text-danger"></span>
            </div>
            
            <!--  <div class="form-group">
          <label asp-for="Pontuacão" class="control-label"></label>
          <input asp-for="Pontuacão" class="form-control" />
          <span asp-validation-for="Pontuacão" class="text-danger"></span>
      </div>-->
            <div class="form-group">
                <input type="submit" value="Inserir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Classificação</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
